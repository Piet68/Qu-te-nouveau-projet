{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="col-6">
        <h2>L'article en question {{ article.title }} </h2>
            <p>{{ article.content }}</p>
        <p>La catégorie de cet article est : {{ article.category.name }}</p>
    </div>

    <strong>Tags :</strong>
    <ul>
        {% for tag in articles.tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>
{% endblock %}