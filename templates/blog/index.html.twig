{% extends 'base.html.twig' %}

{% block title %} Index {% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <div class="container border p-3">
        <h1>Rechercher un article</h1>
    {{ form_start(form) }}
        {{ form_row(form.searchField) }}

    <button type="submit" class="btn btn-success" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    </div>

    <div class="container mt-4 border p-4">
        <h1> Ajouter un article</h1>
        {{ form_start(formAdd) }}
        {{ form_widget(formAdd) }}
        <button type="submit" class="btn btn-info" name="btnSearch">Ajouter</button>
        {{ form_end(formAdd) }}
    </div>

    <div class="container mt-4">
        <h1>All articles from articles table : </h1>
        {% for article in articles %}
            <div>
                <div class="row">
                    <div class="col-10">
                        <h2>{{ loop.index }} / {{ article.title }} - Category : {{ article.category.name }}</h2>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-info" href="{{ path('article_edit', {'id' : article.id}) }}">Ã©diter</a>
                    </div>
                </div>
                <p>{{ article.content }}</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}
